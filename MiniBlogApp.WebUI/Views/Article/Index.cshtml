@model IEnumerable<MiniBlogApp.Entities.Articles>

@{
    ViewData["Title"] = "Index";
}

<style>

    .card-data img {
        width: 100%;
        border-top-left-radius: calc(.25rem - 1px);
        border-top-right-radius: calc(.25rem - 1px);
    }

    .comment-from {
        margin-top: 0px;
        margin-bottom: 10px;
    }
</style>

@foreach (var item in Model)
{

    <div class="card mb-1">
        <div class="row g-0">
            <div class="col-md-4 card-data">
                @*<img src="..." alt="...">*@
                
                @Html.Raw(item.ImageUrl)
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Html.Raw(item.Title)</h5>
                    <p class="card-text">@Html.Raw(item.Description)</p>
                    @Html.Raw(item.Url)
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>

        </div>


    </div>

    @await Component.InvokeAsync("Article", new { id = item.Id })


}




